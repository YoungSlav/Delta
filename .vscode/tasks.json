{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deps: Build (Debug)",
      "type": "shell",
      "command": "make deps CONFIG=Debug",
      "group": "build",
      "problemMatcher": [],
      "osx": {
        "command": "/bin/zsh",
        "args": ["-l", "-c", "make deps CONFIG=Debug"]
      },
      "windows": {
        "command": "bash",
        "args": ["-lc", "scripts/build_deps.sh Debug"]
      }
    },
    {
      "label": "Deps: Build (Release)",
      "type": "shell",
      "command": "make deps CONFIG=Release",
      "group": "build",
      "problemMatcher": [],
      "osx": {
        "command": "/bin/zsh",
        "args": ["-l", "-c", "make deps CONFIG=Release"]
      },
      "windows": {
        "command": "bash",
        "args": ["-lc", "scripts/build_deps.sh Release"]
      }
    },
    {
      "label": "Shaders: Compile",
      "type": "shell",
      "command": "make shaders",
      "group": "build",
      "problemMatcher": [],
      "osx": {
        "command": "/bin/zsh",
        "args": ["-l", "-c", "make shaders"]
      },
      "windows": {
        "command": "bash",
        "args": ["-lc", "scripts/compile_shaders.sh"]
      }
    },
    {
      "label": "Build (Debug)",
      "type": "shell",
      "command": "make debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "osx": {
        "command": "/bin/zsh",
        "args": ["-l", "-c", "make debug"]
      },
      "windows": {
        "command": "powershell",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-Command",
          "& \"$env:ProgramFiles(x86)\\Microsoft Visual Studio\\2022\\Community\\Common7\\Tools\\VsDevCmd.bat\" -arch=x64 -host_arch=x64; make msvc-debug"
        ]
      }
    },
    {
      "label": "Build (Release)",
      "type": "shell",
      "command": "make release",
