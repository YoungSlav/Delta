{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Detect Vulkan SDK",
      "type": "shell",
      "command": "bash",
      "args": ["scripts/detect_vulkan.sh"],
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Deps: Build (Debug)",
      "type": "shell",
      "command": "make deps CONFIG=Debug",
      "group": "build",
      "problemMatcher": [],
      "osx": {
        "command": "/bin/zsh",
        "args": ["-l", "-c", "make deps CONFIG=Debug"]
      },
      "windows": {
        "command": "bash",
        "args": ["-lc", "scripts/build_deps.sh Debug"]
      }
    },
    {
      "label": "Deps: Build (Release)",
      "type": "shell",
      "command": "make deps CONFIG=Release",
      "group": "build",
      "problemMatcher": [],
      "osx": {
        "command": "/bin/zsh",
        "args": ["-l", "-c", "make deps CONFIG=Release"]
      },
      "windows": {
        "command": "bash",
        "args": ["-lc", "scripts/build_deps.sh Release"]
      }
    },
    {
      "label": "Shaders: Compile",
      "type": "shell",
      "command": "make shaders",
      "group": "build",
      "problemMatcher": [],
      "osx": {
        "command": "/bin/zsh",
        "args": ["-l", "-c", "make shaders"]
      },
      "windows": {
        "command": "bash",
        "args": ["-lc", "scripts/compile_shaders.sh"]
      }
    },
    {
      "label": "Build (Debug)",
      "type": "shell",
      "command": "make debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "osx": {
        "command": "/bin/zsh",
        "args": ["-l", "-c", "make debug"]
      },
      "windows": {
        "command": "make msvc-debug",
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c"]
          }
        }
      }
    },
    {
      "label": "Build (Release)",
      "type": "shell",
      "command": "make release",
      "group": "build",
      "problemMatcher": ["$gcc"],
      "osx": {
        "command": "/bin/zsh",
        "args": ["-l", "-c", "make release"]
      },
      "windows": {
        "command": "make msvc-release",
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c"]
          }
        }
      }
    },
    {
      "label": "Build (MSVC Debug)",
      "type": "shell",
      "command": "make msvc-debug",
      "group": "build",
      "problemMatcher": ["$msCompile"],
      "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c"]
          }
        }
      }
    },
    {
      "label": "Build (MSVC Release)",
      "type": "shell",
      "command": "make msvc-release",
      "group": "build",
      "problemMatcher": ["$msCompile"],
      "windows": {
        "options": {
          "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c"]
          }
        }
      }
    },
    {
      "label": "Clean (Current Config)",
      "type": "shell",
      "command": "make clean",
      "group": "build",
      "problemMatcher": []
    }
  ]
}
